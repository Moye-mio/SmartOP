<POINT_CLOUD_RETOUCN_CONFIG>
  Retouch
  <UP> 0 0 1 </UP>
  <NEIGHBOR_BUILDER> NeighborhoodBuilder
    <SIG> EUCLIDEAN_NEIGHBOR_BUILDER </SIG> 
    <SEARCH_MODE> NEAREST </SEARCH_MODE>
    <NEAREST_N> 15 </NEAREST_N>
    <RADIUS> 0.3 </RADIUS>
  </NEIGHBOR_BUILDER>
  <TASK>
    LitterMarker
    <CLUSTER>
      LitterCluster
      <INIT_RESOLUTION> 256 </INIT_RESOLUTION>
      <HARDNESS_THRESHOLD> 0.5 </HARDNESS_THRESHOLD>
      <DEPTH_OFFSET> 0.2 </DEPTH_OFFSET>
      <EXPECT_PROBABILITY> 0.6 </EXPECT_PROBABILITY>
      <FEATURE>
        NormalComplexityFeature
        <SIG> NORMAL_COMPLEXITY </SIG>
        <LARGE_SCALE_RADIUS> 1.5 </LARGE_SCALE_RADIUS>
      </FEATURE>
    </CLUSTER>
    <CLASSIFIER>
      ClusterExpander
      <SIG> CLUSTER_EXPANDER_MULTITHREAD </SIG>
    </CLASSIFIER>
  </TASK>
  <TASK>
    BackgroundMarker
    <CLUSTER>
      BackgroundCluster
      <INIT_RESOLUTION> 256 </INIT_RESOLUTION>
      <HARDNESS_THRESHOLD> 0.6 </HARDNESS_THRESHOLD>
      <DEPTH_OFFSET> 0.5 </DEPTH_OFFSET>
      <EXPECT_PROBABILITY> 0.7 </EXPECT_PROBABILITY>
      <FEATURE>
        PlanarFeature
        <SIG> PLANARITY_FEATURE </SIG>
        <DISTANCE_THRESHOLD> 2.0 </DISTANCE_THRESHOLD>
        <DISTANCE_TOLERANCE> 0.2 </DISTANCE_TOLERANCE>
      </FEATURE>
      <FEATURE>
        NormalComplexityFeature
        <SIG> NORMAL_COMPLEXITY </SIG>
        <LARGE_SCALE_RADIUS> 1.5 </LARGE_SCALE_RADIUS>
      </FEATURE>
    </CLUSTER>
    <CLASSIFIER>
      ClusterExpander
      <SIG> CLUSTER_EXPANDER_MULTITHREAD </SIG>
    </CLASSIFIER>
  </TASK>
  <OUTLIER> 
    Outlier
    <DEV_MUL_THRESH> 2.5 </DEV_MUL_THRESH>
    <MIN_K> 20 </MIN_K>
    <POINT_FILTER_CONDITION> true </POINT_FILTER_CONDITION>
  </OUTLIER>
  <HOLE_REPAIRER>
    HoleRepairer
    <BOUNDARY_DETECTOR>
      BoundaryDetector
      <SEARCH_MODE_BOUNDARY_DETECTOR> NEAREST </SEARCH_MODE_BOUNDARY_DETECTOR>
      <NEAREST_N_BOUNDARY_DETECTOR> 45 </NEAREST_N_BOUNDARY_DETECTOR>
      <BOUNDARY_DISTANCE_TOLERANCE> 0.5 </BOUNDARY_DISTANCE_TOLERANCE>
      <BOUNDARY_SIZE_TOLERANCE> 20 </BOUNDARY_SIZE_TOLERANCE>
    </BOUNDARY_DETECTOR>
    <TEXTURE_SYNTHESIZER>
      TextureSynthesizer
    </TEXTURE_SYNTHESIZER>
  </HOLE_REPAIRER>
</POINT_CLOUD_RETOUCN_CONFIG>
