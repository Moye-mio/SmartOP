<POINT_CLOUD_RETOUCN_CONFIG>
  Retouch
  <UP> 0 0 1 </UP>
  <NEIGHBOR_BUILDER> NeighborhoodBuilder
    <SIG> EUCLIDEAN_NEIGHBOR_BUILDER </SIG> 
    <SEARCH_MODE> NEAREST </SEARCH_MODE>
    <NEAREST_N> 15 </NEAREST_N>
    <RADIUS> 0.5 </RADIUS>
  </NEIGHBOR_BUILDER>
  <TASK>
    LitterMarker
    <CLUSTER>
      LitterCluster
      <INIT_RESOLUTION> 256 </INIT_RESOLUTION>
      <HARDNESS_THRESHOLD> 0.6 </HARDNESS_THRESHOLD>
      <DEPTH_OFFSET> 0.2 </DEPTH_OFFSET>
      <EXPECT_PROBABILITY> 0.4 </EXPECT_PROBABILITY>
      <FEATURE>
	      ColorFeature
	      <SIG> COLOR_FEATURE </SIG>
	      <COLOR_THRESHOLD> 30.0 </COLOR_THRESHOLD>
	      <NUM_MAIN_COLORS> 3 </NUM_MAIN_COLORS>
      </FEATURE>
    </CLUSTER>
    <CLASSIFIER>
      ClusterExpander
      <SIG> CLUSTER_EXPANDER </SIG>
    </CLASSIFIER>
  </TASK>
  <TASK>
    BackgroundMarker
    <CLUSTER>
      BackgroundCluster
      <INIT_RESOLUTION> 256 </INIT_RESOLUTION>
      <HARDNESS_THRESHOLD> 0.8 </HARDNESS_THRESHOLD>
      <DEPTH_OFFSET> 0.5 </DEPTH_OFFSET>
      <EXPECT_PROBABILITY> 0.4 </EXPECT_PROBABILITY>
      <FEATURE>
        PlanarFeature
        <SIG> PLANARITY_FEATURE </SIG>
        <DISTANCE_THRESHOLD> 0.3 </DISTANCE_THRESHOLD>
      </FEATURE>
      <FEATURE>
        VFHFeature
        <SIG> VFH_FEATURE </SIG>
        <CONVOLUTION_KERNEL_SIZE> 5 </CONVOLUTION_KERNEL_SIZE>
      </FEATURE>
      <FEATURE>
        ColorFeature
        <SIG> COLOR_FEATURE </SIG>
        <COLOR_THRESHOLD> 20.0 </COLOR_THRESHOLD>
        <NUM_MAIN_COLORS> 3 </NUM_MAIN_COLORS>
      </FEATURE>
    </CLUSTER>
    <CLASSIFIER>
      ClusterExpander
      <SIG> CLUSTER_EXPANDER </SIG>
    </CLASSIFIER>
  </TASK>
</POINT_CLOUD_RETOUCN_CONFIG>
